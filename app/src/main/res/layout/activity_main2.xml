<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorSecondary"
    tools:context=".Main2Activity">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="please enter you name"
        android:inputType="textPersonName"
        android:textColorHighlight="@color/colorYellow"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@color/colorYellow" />

    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="please enter you number"
        android:inputType="phone"
        android:textColorHighlight="@color/colorYellow"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@color/colorYellow" />

    <EditText
        android:id="@+id/website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="please enter you website"
        android:inputType="textWebEditText"
        android:textColorHighlight="@color/colorYellow"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@color/colorYellow" />

    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="please enter you location"
        android:inputType="textPersonName"
        android:textColorHighlight="@color/colorYellow"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@color/colorYellow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/happy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/happy" />

        <ImageView
            android:id="@+id/medium"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:clickable="true"
            app:srcCompat="@drawable/medium" />

        <ImageView
            android:id="@+id/sad"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:clickable="true"
            app:srcCompat="@drawable/sad" />
    </LinearLayout>

</LinearLayout>